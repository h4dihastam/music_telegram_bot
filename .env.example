# Telegram Bot
BOT_TOKEN=your_bot_token_here

# Spotify API (از developer.spotify.com بگیر)
SPOTIFY_CLIENT_ID=your_spotify_client_id
SPOTIFY_CLIENT_SECRET=your_spotify_client_secret

# Musixmatch API (اختیاری - برای lyrics)
MUSIXMATCH_API_KEY=your_musixmatch_api_key

# Database
# برای local:
DATABASE_URL=sqlite:///music_bot.db
# برای Render با volume:
# DATABASE_URL=sqlite:////app/data/music_bot.db
# برای PostgreSQL:
# DATABASE_URL=postgresql://user:password@host:5432/dbname

# Timezone (optional)
DEFAULT_TIMEZONE=Asia/Tehran

# Port برای health check (Render نیاز داره)
PORT=8080